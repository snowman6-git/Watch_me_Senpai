{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "dating-with-stupids",
  "version": "0.1.0",
  "identifier": "com.dating-with-stupids.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../src-vue/dist"
  },
  
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "xx님, 날 지켜봐줘!",
        "width": 450,
        "height": 750,
        "resizable": false,
        "maximizable": false,
        "minimizable": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
